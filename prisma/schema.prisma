generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continent {
  ctn_id            Int         @id @default(autoincrement())
  ctn_nome          String
  ctn_descricao     String?
}

model Country{
  ctr_id            Int         @id @default(autoincrement())
  ctr_nome          String
  ctr_populacao     Int
  ctr_idioma        String
  ctr_moeda         String

  continent         Continent @relation(fields: ["continentId"], references: [id], onDelete: Cascade)
  ctn_id            Int
}

model City{
  id            Int         @id @default(autoincrement())
  nome          String
  populacao     Int
  latitude      Int
  longitude     Int
  
  country       Continent @relation(fields: ["countryId"], references: [id], onDelete: Cascade)
  countryId     Int
}
